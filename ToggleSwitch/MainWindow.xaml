<Window
    x:Class="ToggleSwitch.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources />

    <Grid Margin="40" HorizontalAlignment="Center">
        <!--
            SWITCH BUTTON ON/OFF
            ToggleButton.Width       : Switch Width
            ToggleButton.BackGround  : Switch BackGround color
            ToggleButton.Foreground  : Switch Icon color
            ToggleButton.BorderBrush : Switch Pill color
        -->
        <ToggleButton
            Width="400"
            Background="DarkGray"
            BorderBrush="WhiteSmoke"
            Foreground="WhiteSmoke" />
    </Grid>
</Window>
